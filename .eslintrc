{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": [
    "react",
    "jam3"
  ],
  "rules": {
    "comma-dangle": "error",
    "indent": ["error", 2, { 
      "SwitchCase": 1 
    }],
    "jam3/no-sanitizer-with-danger": 2,
    "no-console": 0,
    "no-extra-semi": "error",
    "quotes": [ "error", "single" ],
    "semi": ["error", "never"]
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
